(defcfg
  input  (device-file "/dev/input/by-path/platform-i8042-serio-0-event-kbd")
  output (uinput-sink "kmonad_output_kb")
)

(defalias
  nav (layer-toggle navigation)
  sym (layer-toggle symbols)
  num (layer-toggle numbers)
  fnav (tap-hold 280 f   @nav)
  ssym (tap-hold 280 spc @sym)
  vnum (tap-hold 280 v   @num)
  zst  (tap-hold 280 z   lsft)
)

(deflayer initial
  esc  f1   f2   f3   f4   f5    f6        f7   f8   f9   f10  f11   f12  ssrq slck del      home end pgup pgdn
  ~    1    2    3    4    5     6         7    8    9    0    -    =    bspc                nlck kp/ kp* kp-
  tab       q    w    e    r     t         bspc y    u    i    o    p     \    |             kp7  kp8 kp9 kp+
  lctl      a    s    d    @fnav g         ret  h    j    k    l    ;         ret            kp4  kp5 kp6    
  lsft      @zst x    c    @vnum XX        b    n    m    ,    .    '         up             kp1  kp2 kp3 kprt
  caps      lmet lalt @ssym                          ralt KeyMenu   rctl left down right         kp0 kp.
)

(deflayer navigation
  esc  f1   f2   f3   f4   f5   f6        f7   f8   f9   f10  f11   f12  ssrq slck del      home end pgup pgdn
